<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rohil.animeister.EventFragment"
    android:fitsSystemWindows="false">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarEventsFragment" />

        <TextView
            android:text="No events currently available.\nPlease check later."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNoEvent"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/eventRecyclerView"
            android:divider="@color/cardview_light_background" />


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
